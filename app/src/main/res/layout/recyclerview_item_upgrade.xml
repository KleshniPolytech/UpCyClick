<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lay_3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_selector"
    android:layout_marginBottom="16dp"
    android:clickable="true"
    app:layoutDescription="@xml/recyclerview_item_upgrade_scene"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/upgrade_back"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_rectangle_background" />

    <ImageView
        android:id="@+id/image_view_icon_upgrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/upgrade_back"
        app:layout_constraintEnd_toEndOf="@+id/upgrade_back"
        app:layout_constraintStart_toStartOf="@+id/upgrade_back"
        app:layout_constraintTop_toTopOf="@+id/upgrade_back"
        app:srcCompat="@drawable/ic_double_click" />

    <TextView
        android:id="@+id/title_upgrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Upgrade"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/upgrade_back"
        app:layout_constraintTop_toTopOf="@+id/upgrade_back" />

    <TextView
        android:id="@+id/descr_upgrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:lines="2"
        android:text="Special skills and resources\nare required"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/title_upgrade"
        app:layout_constraintTop_toBottomOf="@+id/title_upgrade" />

    <TextView
        android:id="@+id/income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="+50/click "
        android:textColor="@color/primaryColor"
        android:textSize="10sp"
        app:drawableRightCompat="@drawable/ic_up_very_small"
        app:layout_constraintStart_toStartOf="@+id/descr_upgrade"
        app:layout_constraintTop_toBottomOf="@+id/descr_upgrade" />

    <ImageView
        android:id="@+id/imageView__3"
        android:layout_width="39dp"
        android:layout_height="52dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shop_selected" />

    <TextView
        android:id="@+id/buy_icon_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Buy"
        android:textColor="@color/main_green"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView__3"
        app:layout_constraintEnd_toEndOf="@+id/imageView__3"
        app:layout_constraintStart_toStartOf="@+id/imageView__3"
        app:layout_constraintTop_toTopOf="@+id/imageView__3" />

    <TextView
        android:id="@+id/price_count_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="10000 "
        android:textColor="@color/primaryColor"
        android:textSize="12sp"
        app:drawableRightCompat="@drawable/ic_up_very_small"
        app:layout_constraintEnd_toEndOf="@+id/imageView__3"
        app:layout_constraintStart_toStartOf="@+id/imageView__3"
        app:layout_constraintTop_toBottomOf="@+id/imageView__3" />


</androidx.constraintlayout.motion.widget.MotionLayout>
