<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_question"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/roboto"
        android:text="Didn't have enough coins?"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <Button
        android:id="@+id/button_get_coins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_selector"
        android:clickable="true"
        android:fontFamily="@font/roboto"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="Get coins"
        android:textAllCaps="false"
        android:textSize="37sp"
        app:layout_constraintEnd_toEndOf="@+id/text_question"
        app:layout_constraintStart_toStartOf="@+id/text_question"
        app:layout_constraintTop_toBottomOf="@+id/text_question" />

    <Button
        android:id="@+id/button_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_selector"
        android:clickable="true"
        android:fontFamily="@font/roboto"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="Quiz"
        android:textAllCaps="false"
        android:textSize="37sp"
        app:layout_constraintEnd_toEndOf="@+id/button_get_coins"
        app:layout_constraintStart_toStartOf="@+id/button_get_coins"
        app:layout_constraintTop_toBottomOf="@+id/button_get_coins" />

    <Button
        android:id="@+id/button_buy_upgrades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_selector"
        android:clickable="true"
        android:fontFamily="@font/roboto"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="Buy upgrades"
        android:textAllCaps="false"
        android:textSize="37sp"
        app:layout_constraintEnd_toEndOf="@+id/button_quiz"
        app:layout_constraintStart_toStartOf="@+id/button_quiz"
        app:layout_constraintTop_toBottomOf="@+id/button_quiz" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lay_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_selector"
            android:clickable="true"
            android:elevation="12dp"
            android:translationZ="6dp"
            android:stateListAnimator="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lay_2">

            <ImageView
                android:id="@+id/imageView__1"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_rectangle_background" />

            <ImageView
                android:id="@+id/imageView__2"
                android:layout_width="37dp"
                android:layout_height="37dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView__1"
                app:layout_constraintEnd_toEndOf="@+id/imageView__1"
                app:layout_constraintStart_toStartOf="@+id/imageView__1"
                app:layout_constraintTop_toTopOf="@+id/imageView__1"
                app:srcCompat="@drawable/ic_legendary_scroll" />

            <TextView
                android:id="@+id/rare_legend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Legendary scroll"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView__1"
                app:layout_constraintTop_toTopOf="@+id/imageView__1" />

            <TextView
                android:id="@+id/descr_legend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:lines="2"
                android:text="Special skills and resources\nare required"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/rare_legend"
                app:layout_constraintTop_toBottomOf="@+id/rare_legend" />

            <TextView
                android:id="@+id/impact_legend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="+50,0/sec "
                android:textColor="@color/primaryColor"
                android:textSize="10sp"
                app:drawableRightCompat="@drawable/ic_up_very_small"
                app:layout_constraintStart_toStartOf="@+id/descr_legend"
                app:layout_constraintTop_toBottomOf="@+id/descr_legend" />

            <ImageView
                android:id="@+id/imageView__3"
                android:layout_width="39dp"
                android:layout_height="52dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/shop_selected" />

            <TextView
                android:id="@+id/buy_icon_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="4dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Buy"
                android:textColor="@color/main_green"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView__3"
                app:layout_constraintEnd_toEndOf="@+id/imageView__3"
                app:layout_constraintStart_toStartOf="@+id/imageView__3"
                app:layout_constraintTop_toTopOf="@+id/imageView__3" />

            <TextView
                android:id="@+id/price_count_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="10000 "
                android:textColor="@color/primaryColor"
                android:textSize="12sp"
                app:drawableRightCompat="@drawable/ic_up_very_small"
                app:layout_constraintEnd_toEndOf="@+id/imageView__3"
                app:layout_constraintStart_toStartOf="@+id/imageView__3"
                app:layout_constraintTop_toBottomOf="@+id/imageView__3" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lay_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_rectangle_background" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="37dp"
                android:layout_height="37dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintEnd_toEndOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                app:srcCompat="@drawable/ic_common_scroll" />

            <TextView
                android:id="@+id/rare_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Common scroll"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/imageView" />

            <TextView
                android:id="@+id/descr_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:lines="2"
                android:text="Easy to reproduce at home, \ndoes not require much effort"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/rare_common"
                app:layout_constraintTop_toBottomOf="@+id/rare_common" />

            <TextView
                android:id="@+id/impact_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="+1,0/sec "
                android:textColor="@color/primaryColor"
                android:textSize="10sp"
                app:drawableRightCompat="@drawable/ic_up_very_small"
                app:layout_constraintStart_toStartOf="@+id/descr_common"
                app:layout_constraintTop_toBottomOf="@+id/descr_common" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="39dp"
                android:layout_height="52dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/shop_selected" />

            <TextView
                android:id="@+id/buy_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="4dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Buy"
                android:textColor="@color/main_green"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                app:layout_constraintEnd_toEndOf="@+id/imageView3"
                app:layout_constraintStart_toStartOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="@+id/imageView3" />

            <TextView
                android:id="@+id/price_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="100 "
                android:textColor="@color/primaryColor"
                android:textSize="12sp"
                app:drawableRightCompat="@drawable/ic_up_very_small"
                app:layout_constraintEnd_toEndOf="@+id/imageView3"
                app:layout_constraintStart_toStartOf="@+id/imageView3"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lay_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_selector"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lay_1">

            <ImageView
                android:id="@+id/imageView_1"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_rectangle_background" />

            <ImageView
                android:id="@+id/imageView_2"
                android:layout_width="37dp"
                android:layout_height="37dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_1"
                app:layout_constraintEnd_toEndOf="@+id/imageView_1"
                app:layout_constraintStart_toStartOf="@+id/imageView_1"
                app:layout_constraintTop_toTopOf="@+id/imageView_1"
                app:srcCompat="@drawable/ic_rare_scroll" />

            <TextView
                android:id="@+id/rare_rare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Rare scroll"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView_1"
                app:layout_constraintTop_toTopOf="@+id/imageView_1" />

            <TextView
                android:id="@+id/descr_rare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:lines="2"
                android:text="A little more complicated\nthan usual"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/rare_rare"
                app:layout_constraintTop_toBottomOf="@+id/rare_rare" />

            <TextView
                android:id="@+id/impact_rare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="+5,0/sec "
                android:textColor="@color/primaryColor"
                android:textSize="10sp"
                app:drawableRightCompat="@drawable/ic_up_very_small"
                app:layout_constraintStart_toStartOf="@+id/descr_rare"
                app:layout_constraintTop_toBottomOf="@+id/descr_rare" />

            <ImageView
                android:id="@+id/imageView_3"
                android:layout_width="39dp"
                android:layout_height="52dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/shop_selected" />

            <TextView
                android:id="@+id/buy_icon_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="4dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Buy"
                android:textColor="@color/main_green"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_3"
                app:layout_constraintEnd_toEndOf="@+id/imageView_3"
                app:layout_constraintStart_toStartOf="@+id/imageView_3"
                app:layout_constraintTop_toTopOf="@+id/imageView_3" />

            <TextView
                android:id="@+id/price_count_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="1000 "
                android:textColor="@color/primaryColor"
                android:textSize="12sp"
                app:drawableRightCompat="@drawable/ic_up_very_small"
                app:layout_constraintEnd_toEndOf="@+id/imageView_3"
                app:layout_constraintStart_toStartOf="@+id/imageView_3"
                app:layout_constraintTop_toBottomOf="@+id/imageView_3" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>